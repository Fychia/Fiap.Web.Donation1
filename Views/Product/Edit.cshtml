@model ModelProduct
<h1>Produto - Editar</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <form action="/Product/Edit" method="post">
                    <input type="hidden" name="ProductID" value="@Model.ProductID"
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" name="ProductName" value="@Model.ProductName" class="form-control w-50" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Descrição:</label>
                        <input type="text" name="ProductDescription" value="@Model.ProductDescription" class="form-control w-75" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" checked="@Model.ProductAvailable" name="ProductAvailable" class="form-check-input" />
                        <label class="form-check-label">ProductAvailable</label>
                    </div>
                    <div class="form-group">
                        <label>Tipo: @Model.ProductTypeID</label>
                        <select name="ProductType" class="form-control w-75">
                            <option value="0">Selecione</option>
                            @foreach (var type in ViewBag.typeProductRepository)
                            {
                                if (Model.ProductTypeID == type.TypeProductID)
                                {
                                    <option value="@type.TypeProductID" selected>@type.TypeProductName</option>
                                    
                                }else
                                {
                                    <option value="@type.TypeProductID">@type.TypeProductName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sugestão de troca:</label>
                        <textarea name="Sugestion" value="@Model.Sugestion" class="form-control w-75"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Valor:</label>
                        <input type="number" name="valor" value="@Model.Value" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Data da Expiração:</label>
                        <input type="date" name="ExpirationDate" value="@Model.ExpirationDate" class="form-control w-25" />
                    </div>


                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>

</div>