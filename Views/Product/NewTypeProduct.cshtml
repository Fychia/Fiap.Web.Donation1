@{
}

@model ModelTypeProduct
<h1>Produto - TypeProduct</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <form action="/Product/NewTypeProduct" method="post">
                    <input type="hidden" name="TypeProductID" value="@Model.TypeProductID"
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" name="TypeProductName" value="@Model.TypeProductName" class="form-control w-50" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Descrição:</label>
                        <input type="text" name="TypeProductDescription" value="@Model.TypeProductDescription" class="form-control w-75" />
                    </div>
                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>

</div>